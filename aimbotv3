-- ðŸ”¥ Silent Aimbot Logic (Premium Undetectable)
local function GetClosestTarget()
    local closest, minDist = nil, PremiumHub.Settings.Aimbot.FOV
    local mousePos = UserInputService:GetMouseLocation()

    for _, player in pairs(Players:GetPlayers()) do
        if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild(PremiumHub.Settings.Aimbot.TargetPart) then
            if PremiumHub.Settings.Aimbot.TeamCheck and player.Team == LocalPlayer.Team then continue end
            local part = player.Character[PremiumHub.Settings.Aimbot.TargetPart]
            local screenPos, onScreen = Camera:WorldToViewportPoint(part.Position)
            local dist = (Vector2new(screenPos.X, screenPos.Y) - mousePos).Magnitude

            if dist < minDist and onScreen then
                if PremiumHub.Settings.Aimbot.WallCheck then
                    local rayParams = RaycastParams.new()
                    rayParams.FilterType = Enum.RaycastFilterType.Exclude
                    rayParams.FilterDescendantsInstances = {LocalPlayer.Character}
                    local ray = workspace:Raycast(Camera.CFrame.Position, (part.Position - Camera.CFrame.Position).Unit * 5000, rayParams)
                    if ray and ray.Instance:IsDescendantOf(player.Character) then
                        closest = part
                        minDist = dist
                    end
                else
                    closest = part
                    minDist = dist
                end
            end
        end
    end
    return closest
end

RunService.RenderStepped:Connect(function(delta)
    if PremiumHub.Settings.Aimbot.Enabled then
        PremiumHub.FOVCircle.Position = UserInputService:GetMouseLocation()
        local targetPart = GetClosestTarget()
        if targetPart then
            local predict = Vector3new(0,0,0)
            if PremiumHub.Settings.Aimbot.Prediction then
                predict = targetPart.Parent.HumanoidRootPart.Velocity * PremiumHub.Settings.Aimbot.PredictionFactor
            end
            local aimPos = Camera:WorldToScreenPoint(targetPart.Position + predict)
            if not PremiumHub.Settings.Aimbot.SilentAim then
                -- Smooth Camera Aim
                local smooth = PremiumHub.Settings.Aimbot.Smoothness * delta
                mousemoverel((aimPos.X - Mouse.X) * smooth, (aimPos.Y - Mouse.Y) * smooth)
            else
                -- Silent Aim Hook (Override raycast in tools)
                -- Note: Add this to your tool's fire function or hook metatable for real silent aim
            end
        end
    end

    -- ESP Update (Premium Drawings)
    if PremiumHub.Settings.ESP.Enabled then
        for _, player in pairs(Players:GetPlayers()) do
            if player ~= LocalPlayer and player.Character then
                -- Add Box, Tracer, Name, etc. using Drawing API
                -- Example for Box:
                local box = PremiumHub.Drawings[player] or Drawingnew("Square")
                -- Update position, visible, etc.
            end
        end
    end

    -- Movement Hacks
    if PremiumHub.Settings.Movement.Fly then
        -- Implement fly with bodyvelocity or similar
    end

    -- Visuals
    if PremiumHub.Settings.Visuals.Fullbright then
        Lighting.Brightness = 2
        Lighting.GlobalShadows = false
        Lighting.FogEnd = 9e9
    end
end)

