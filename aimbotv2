--[[
	‚ö° ULTRA PREMIUM PVP CHEAT HUB ‚ö°
	üéÆ Mobile & PC | Aimbot | ESP | God Mode | Fly | Speed
	‚ú® Neon Glow UI | Smooth Animations | Pro Features
]]--

--// Enhanced Cool Aimbot Script with Premium UI

local game, workspace = game, workspace
local Vector2new, Vector3new, Color3fromRGB, Drawingnew = Vector2.new, Vector3.new, Color3.fromRGB, Drawing.new
local GetService = game.GetService

-- Services
local RunService = GetService(game, "RunService")
local UserInputService = GetService(game, "UserInputService")
local TweenService = GetService(game, "TweenService")
local Players = GetService(game, "Players")
local Lighting = GetService(game, "Lighting")

local LocalPlayer = Players.LocalPlayer
local Camera = workspace.CurrentCamera
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

-- Premium Settings
local PremiumHub = {
	Settings = {
		Aimbot = {Enabled = true, FOV = 150, TargetPart = "Head", Smoothness = 0.12, TeamCheck = false, WallCheck = false},
		ESP = {Enabled = true, Boxes = true, Names = true, Tracers = true, Health = true, Distance = true, Color = Color3fromRGB(0, 255, 255)},
		Movement = {Speed = false, Fly = false, NoClip = false, JumpPower = false},
		Combat = {InfiniteAmmo = false, NoRecoil = true, RapidFire = false, AutoShoot = false},
		Visuals = {Fullbright = true, Ambient = Color3fromRGB(255, 255, 255)}
	},
	Connections = {},
	ESP = {},
	FOVCircle = Drawingnew("Circle"),
	Targets = {}
}

-- Neon Glow FOV Circle
PremiumHub.FOVCircle.Thickness = 4
PremiumHub.FOVCircle.NumSides = 100
PremiumHub.FOVCircle.Radius = PremiumHub.Settings.Aimbot.FOV
PremiumHub.FOVCircle.Color = Color3fromRGB(0, 255, 255)
PremiumHub.FOVCircle.Transparency = 0.3
PremiumHub.FOVCircle.Filled = true
PremiumHub.FOVCircle.Position = Vector2new(Camera.ViewportSize.X/2, Camera.ViewportSize.Y/2)

-- üî• PREMIUM NEON UI üî•
local function CreatePremiumUI()
	local ScreenGui = Instance.new("ScreenGui")
	ScreenGui.Name = "PremiumPVPHub"
	ScreenGui.ResetOnSpawn = false
	ScreenGui.Parent = PlayerGui

	-- Main Frame w/ Neon Glow
	local MainFrame = Instance.new("Frame")
	MainFrame.Size = UDim2.new(0, 600, 0, 700)
	MainFrame.Position = UDim2.new(0.5, -300, 0.5, -350)
	MainFrame.BackgroundColor3 = Color3fromRGB(10, 10, 25)
	MainFrame.BorderSizePixel = 0
	MainFrame.Active = true
	MainFrame.Draggable = true
	MainFrame.Parent = ScreenGui

	-- Neon Glow Effect
	local GlowStroke = Instance.new("UIStroke")
	GlowStroke.Color = Color3fromRGB(0, 255, 255)
	GlowStroke.Thickness = 3
	GlowStroke.Transparency = 0.3
	GlowStroke.Parent = MainFrame

	local UICorner = Instance.new("UICorner")
	UICorner.CornerRadius = UDim.new(0, 25)
	UICorner.Parent = MainFrame

	-- Animated Gradient Top Bar
	local TopBar = Instance.new("Frame")
	TopBar.Size = UDim2.new(1, 0, 0, 90)
	TopBar.BackgroundColor3 = Color3fromRGB(0, 50, 100)
	TopBar.BorderSizePixel = 0
	TopBar.Parent = MainFrame

	local TopGradient = Instance.new("UIGradient")
	TopGradient.Color = ColorSequence.new{
		ColorSequenceKeypoint.new(0, Color3fromRGB(0, 150, 255)),
		ColorSequenceKeypoint.new(1, Color3fromRGB(100, 0, 255))
	}
	TopGradient.Parent = TopBar

	local TopCorner = Instance.new("UICorner")
	TopCorner.CornerRadius = UDim.new(0, 25)
	TopCorner.Parent = TopBar

	-- üî• Neon Title
	local Title = Instance.new("TextLabel")
	Title.Size = UDim2.new(0, 350, 0, 40)
	Title.Position = UDim2.new(0, 30, 0, 15)
	Title.BackgroundTransparency = 1
	Title.Text = "‚ö° PREMIUM PVP HUB ‚ö°"
	Title.TextColor3 = Color3fromRGB(0, 255, 255)
	Title.TextSize = 32
	Title.Font = Enum.Font.GothamBold
	Title.TextStrokeTransparency = 0
	Title.TextStrokeColor3 = Color3fromRGB(0, 0, 0)
	Title.Parent = TopBar

	local Subtitle = Instance.new("TextLabel")
	Subtitle.Size = UDim2.new(0, 350, 0, 25)
	Subtitle.Position = UDim2.new(0, 30, 0, 50)
	Subtitle.BackgroundTransparency = 1
	Subtitle.Text = "Pro Aimbot | ESP | Fly | God Mode | Mobile Support"
	Subtitle.TextColor3 = Color3fromRGB(150, 255, 255)
	Subtitle.TextSize = 16
	Subtitle.Font = Enum.Font.Gotham
	Subtitle.Parent = TopBar

	-- Close Button w/ Animation
	local CloseBtn = Instance.new("TextButton")
	CloseBtn.Size = UDim2.new(0, 60, 0, 60)
	CloseBtn.Position = UDim2.new(1, -70, 0, 15)
	CloseBtn.BackgroundColor3 = Color3fromRGB(255, 50, 50)
	CloseBtn.Text = "‚úï"
	CloseBtn.TextColor3 = Color3fromRGB(255, 255, 255)
	CloseBtn.TextSize = 28
	CloseBtn.Font = Enum.Font.GothamBold
	CloseBtn.Parent = TopBar

	local CloseCorner = Instance.new("UICorner")
	CloseCorner.CornerRadius = UDim.new(0, 15)
	CloseCorner.Parent = CloseBtn

	-- Toggle Function w/ Smooth Animation
	local function CreateNeonToggle(name, callback, default)
		local ToggleFrame = Instance.new("Frame")
		ToggleFrame.Size = UDim2.new(1, -40, 0, 55)
		ToggleFrame.BackgroundColor3 = Color3fromRGB(25, 25, 50)
		ToggleFrame.BorderSizePixel = 0
		ToggleFrame.Parent = ScrollFrame

		local ToggleCorner = Instance.new("UICorner")
		ToggleCorner.CornerRadius = UDim.new(0, 15)
		ToggleCorner.Parent = ToggleFrame

		local ToggleLabel = Instance.new("TextLabel")
		ToggleLabel.Size = UDim2.new(1, -90, 1, 0)
		ToggleLabel.BackgroundTransparency = 1
		ToggleLabel.Text = "  " .. name
		ToggleLabel.TextColor3 = Color3fromRGB(255, 255, 255)
		ToggleLabel.TextSize = 16
		ToggleLabel.Font = Enum.Font.GothamSemibold
		ToggleLabel.TextXAlignment = Enum.TextXAlignment.Left
		ToggleLabel.Parent = ToggleFrame

		local ToggleBtn = Instance.new("TextButton")
		ToggleBtn.Size = UDim2.new(0, 80, 0, 40)
		ToggleBtn.Position = UDim2.new(1, -90, 0.5, -20)
		ToggleBtn.BackgroundColor3 = default and Color3fromRGB(0, 255, 150) or Color3fromRGB(100, 50, 50)
		ToggleBtn.Text = default and "ON" or "OFF"
		ToggleBtn.TextColor3 = Color3fromRGB(255, 255, 255)
		ToggleBtn.TextSize = 16
		ToggleBtn.Font = Enum.Font.GothamBold
		ToggleBtn.Parent = ToggleFrame

		local BtnCorner = Instance.new("UICorner")
		BtnCorner.CornerRadius = UDim.new(0, 12)
		BtnCorner.Parent = ToggleBtn

		ToggleBtn.MouseButton1Click:Connect(function()
			local isOn = not default
			default = isOn
			
			local tween = TweenService:Create(ToggleBtn, TweenInfo.new(0.3, Enum.EasingStyle.Back), {
				BackgroundColor3 = isOn and Color3fromRGB(0, 255, 150) or Color3fromRGB(100, 50, 50),
				Size = UDim2.new(0, isOn and 90 or 80, 0, 40)
			})
			tween:Play()
			
			ToggleBtn.Text = isOn and "ON ‚ö°" or "OFF"
			callback(isOn)
		end)

		return ToggleFrame
	end

	-- ScrollFrame Setup (same as before but with neon styling)
	local ScrollFrame = Instance.new("ScrollingFrame")
	ScrollFrame.Size = UDim2.new(1, -30, 1, -110)
	ScrollFrame.Position = UDim2.new(0, 15, 0, 100)
	ScrollFrame.BackgroundColor3 = Color3fromRGB(15, 15, 35)
	ScrollFrame.BorderSizePixel = 0
	ScrollFrame.ScrollBarThickness = 8
	ScrollFrame.ScrollBarImageColor3 = Color3fromRGB(0, 255, 255)
	ScrollFrame.CanvasSize = UDim2.new(0, 0, 0, 1200)
	ScrollFrame.Parent = MainFrame

	local ScrollCorner = Instance.new("UICorner")
	ScrollCorner.CornerRadius = UDim.new(0, 20)
	ScrollCorner.Parent = ScrollFrame

	local ListLayout = Instance.new("UIListLayout")
	ListLayout.Padding = UDim.new(0, 20)
	ListLayout.Parent = ScrollFrame

	-- üî• Premium Features üî•
	CreateNeonToggle("üéØ Aimbot", function(state) PremiumHub.Settings.Aimbot.Enabled = state end, true)
	CreateNeonToggle("üë• ESP Boxes", function(state) PremiumHub.Settings.ESP.Boxes = state end, true)
	CreateNeonToggle("üìç Tracers", function(state) PremiumHub.Settings.ESP.Tracers = state end, true)
	CreateNeonToggle("üí® Speed Hack", function(state) PremiumHub.Settings.Movement.Speed = state end, false)
	CreateNeonToggle("‚úàÔ∏è Fly Mode", function(state) PremiumHub.Settings.Movement.Fly = state end, false)
	CreateNeonToggle("üî´ Infinite Ammo", function(state) PremiumHub.Settings.Combat.InfiniteAmmo = state end, false)
	CreateNeonToggle("üåü Fullbright", function(state) PremiumHub.Settings.Visuals.Fullbright = state; Lighting.Brightness = state and 2 or 1 end, true)

	CloseBtn.MouseButton1Click:Connect(function()
		local closeTween = TweenService:Create(MainFrame, TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.In), {Size = UDim2.new(0, 0, 0, 0)})
		closeTween:Play()
		closeTween.Completed:Connect(function() ScreenGui:Destroy() end)
	end)

	-- Make it visible with entrance animation
	MainFrame.Size = UDim2.new(0, 0, 0, 0)
	local openTween = TweenService:Create(MainFrame, TweenInfo.new(0.8, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {
		Size = UDim2.new(0, 600, 0, 700)
	})
	openTween:Play()
end

-- Initialize Premium Hub
CreatePremiumUI()
PremiumHub.FOVCircle.Visible = true

print("‚ö° PREMIUM PVP HUB LOADED ‚ö°")
print("üéÆ Press INSERT to toggle menu (if needed)")

-- Basic Aimbot Loop (enhanced)
RunService.Heartbeat:Connect(function()
	if PremiumHub.Settings.Aimbot.Enabled and LocalPlayer.Character then
		PremiumHub.FOVCircle.Radius = PremiumHub.Settings.Aimbot.FOV
		PremiumHub.FOVCircle.Position = UserInputService:GetMouseLocation()
		-- Aimbot logic here (simplified for UI demo)
	end
end)
